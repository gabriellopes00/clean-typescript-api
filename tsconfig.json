{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@presControllers/*": ["./src/presentation/controllers/*"],
      "@presInterfaces/*": ["./src/presentation/interfaces/*"],
      "@presHelpers/*": ["./src/presentation/helpers/*"],
      "@presErrors/*": ["./src/presentation/errors/*"],

      "@domModels/*": ["./src/domain/models/*"],
      "@domUsecases/*": ["./src/domain/usecases/*"],

      "@dataUsecases/*": ["./src/data/usecases/*"]
    }
  },
  "include": ["src/**/*"]
}
